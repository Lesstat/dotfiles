# Reload shortcuts
super + Escape
      pkill -USR1 sxhkd

super + Return 
      st -e tmux
super + shift + Return 
      st 
super + l 
      lock.sh
super + shift + l 
      lock.sh -h
super + p
      rofi -auto-select -show drun -lines 12 -eh 1 -width 50 -bw 0 -font "DejaVuSansMono 12"

super + shift + q 
      i3-nagbar -t warning -m 'You pressed the shutdown shortcut. Do you really want to shutdown?' -b 'Yes, shutdown now' 'exec shutdown now'


super + n 
      emacsclient -c -a ""
super + c 
      execInEmacs.sh "(org-capture)"
super + o 
      execInEmacs.sh "(org-agenda)"
super + t 
      st -e htop
super + m 
      st -e tmux new-session ncmpcpp
super + f 
      st -e tmux new-session ranger

# Audio
XF86AudioNext         
      mpc next
XF86AudioPrev         
      mpc prev
XF86AudioStop         
      mpc stop
XF86AudioPlay         
      mpc toggle
XF86AudioRaiseVolume  
      --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
XF86AudioLowerVolume  
      --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
XF86AudioMute         
      --no-startup-id pactl set-sink-mute 0 toggle

# Backlight
XF86MonBrightnessDown 
      xbacklight -dec 5
XF86MonBrightnessUp   
      xbacklight -inc 5

# Change Background
super + b 
      wal -o wal-set -i ~/Desktop/
super + shift + b 
      wal -l -o wal-set -i ~/Desktop/

# Take Screenshot
Print 
      scrot -e 'mv $f ~/Downloads'
shift + Print 
      scrot -s -e 'mv $f ~/Downloads'


##########################################
# WM Keybindings
##########################################
# change focus
super + { Left, Right, Up, Down }
      herbstclient focus { left, right, up ,down }

super + i
      herbstclient jumpto urgent 

# move focused window
super + shift + { Left, Right, Up, Down }
      herbstclient shift {left, right, up ,down}

# resize
super + alt + {Left, Right, Up, Down}
    herbstclient resize {left, right, up, down} +0.05

# split frames
super + {h, v}
      herbstclient split {rigth,bottom} 0.5

super + g
      herbstclient split explode 


# remove frame
super + r
      herbstclient  remove 

# enter fullscreen mode for the focused container
F11
	herbstclient fullscreen toggle

# change focus between tiling / floating windows
super + space
      herbstclient floating toggle

super + Tab
      herbstclient or , and . compare tags.focus.curframe_wcount = 2            \
                     . cycle_layout +1 vertical horizontal max vertical grid    \
               	     , cycle_layout +1

# switch to workspace
super + {1-9,0}
      herbstclient use_index {0-9}

# move focused container to workspace
super + shift + {1-9,0}
      herbstclient move_index {0-9}

# reload the configuration file
super + q
      herbstclient close
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
super + shift + r
      herbstclient reload
# exit herbstluftwm (logs you out of your X session)
super + shift + e 
	i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit herbstluftwm? This will end your X session.' -b 'Yes, exit i3' 'herbstclient quit'