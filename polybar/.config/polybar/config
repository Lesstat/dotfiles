[colors]
bg-active =  ${xrdb:color0:#f0f0f0} 
bg-urgent =  ${xrdb:color1:#f0f0f0}
background = #333
foreground = ${xrdb:foreground:#222}
underline = #f55


[bar/main]
monitor = ${env:MONITOR:}
width = 100%
height = 23
radius = 2.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-top-size = 3
border-bottom-size = 0

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = DejaVuSansM Nerd Font:pixelsize=10
font-1 = NotoColorEmoji:fontformat=truetype:scale=10:antialias=false;

modules-left = ewmh
modules-center = title
modules-right = mail calendar volume keyboard memory cpu battery1 date 

tray-position = right
tray-padding = 2

enable-ipc = true

cursor-click = pointer
cursor-scroll = ns-resize

separator = |

[module/ewmh]
type = internal/xworkspaces
enable-scroll = true
format-padding = 2
format-foreground = ${colors.foreground}
format-background = ${colors.background}

padding = 1

format = <label-state>

label-active = %icon% %name% 
label-active-background = ${colors.bg-active}
label-active-underline = ${colors.underline}
label-active-padding = ${self.padding}

label-occupied = %icon% %name% 
label-occupied-padding = ${self.padding}

label-urgent = %icon% %name% 
label-urgent-background = ${colors.bg-urgent}
label-urgent-padding = ${self.padding}

label-empty = %icon% %name% 
label-empty-padding = ${self.padding}


icon-0 = code;
icon-1 = shell;
icon-2 = org;
icon-3 = doc;
icon-4 = web;
icon-5 = mail;
icon-default = 

[module/keyboard]
type = custom/ipc
hook-0 = currentKeyboard.sh
initial = 1
click-left = changeKeyboard.sh

format-prefix = "⌨ "
format-underline = ${colors.underline}

[module/mail]
type = custom/ipc
hook-0 = muWidget.sh
initial = 1
click-left = execInEmacs.sh "(mu4e)"
click-right = mailsync &
format-underline = ${colors.underline}

[module/calendar]
type = custom/script
exec = next_khal_date.sh
interval = 60
format-prefix = "🗓 "
format-underline = ${colors.underline}
click-left = display_todays_agenda.sh

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "🧠"
;format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.underline}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "💾 "
format-underline = ${colors.underline}
label = %percentage_used%%

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 🗓
;format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.underline}

label = %date% %time%

[module/volume]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
format-underline = ${colors.underline}
label-volume-foreground = ${root.foreground}
format-muted-prefix = "🔈 "
;format-muted-foreground = ${colors.foreground-alt}
label-muted = mute
ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊

[module/battery1]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 90

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.underline}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = "🔋 "
;format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 🔋

animation-charging-0 = 🔌

animation-charging-framerate = 1000

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5


[module/title]
type = internal/xwindow
label-maxlen = 50
format-underline = ${colors.underline}
