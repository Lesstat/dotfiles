[module/keyboard]
type = custom/ipc
hook-0 = currentKeyboard.sh
initial = 1
click-left = changeKeyboard.sh

format-prefix = " "
format-underline = ${colors.col3}

[module/mail]
type = custom/ipc
hook-0 = notmuchWidget.sh
initial = 1
click-left = emacsclient -e "(notmuch)"
click-right = mail_sync.sh &
format-underline = ${colors.col3}

[module/calendar]
type = custom/script
exec = next_khal_date.sh
interval = 60
format-prefix = " "
format-underline = ${colors.col3}
click-left = display_todays_agenda.sh

[module/mpd]
type = internal/mpd
