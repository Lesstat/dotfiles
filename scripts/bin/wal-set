#!/usr/bin/env bash
#
# Script to set colors generated by 'wal'
# https://github.com/dylanaraps/wal

# Source generated colors.
. "${HOME}/.cache/wal/colors.sh"

reload_dunst() {
    pkill dunst
    dunst \
        -lb "${color7:-#FFFFFF}" \
        -nb "${color7:-#FFFFFF}" \
        -cb "${color7:-#FFFFFF}" \
        -lf "${color2:-#000000}" \
        -bf "${color2:-#000000}" \
        -cf "${color2:-#000000}" \
        -nf "${color2:-#000000}" \
        -fn "DejaVuSansMono Nerd Font 10" \
        -geometry "600x40-80+100" &
}

main() {
    reload_dunst &
}

main
